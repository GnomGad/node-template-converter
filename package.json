{
  "name": "node-template-converter",
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix --color",
    "prepare": "yarn run snyk-protect && husky install",
    "test": "mocha .\\test\\test.js",
    "snyk-protect": "snyk-protect"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:fix",
      "git add ."
    ]
  },
  "repository": "https://github.com/GnomGad/node-template-converter.git",
  "author": "Evgeny <canimore@yandex.ua>",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "mocha": "^9.2.0",
    "prettier": "^2.3.2"
  },
  "dependencies": {
    "docxtemplater": "^3.23.2",
    "pizzip": "^3.1.1",
    "convert-multiple-files": "^1.2.5",
    "@snyk/protect": "latest"
  },
  "snyk": true
}
